{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://watchkeeper.local/contracts/v1/execute_request.schema.json",
  "title": "ExecuteRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["request_id", "incident_id"],
  "properties": {
    "request_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    },
    "incident_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    },
    "watch_condition": {
      "type": "string",
      "enum": ["STANDBY", "GAME", "WORK", "TUTOR", "RESTRICTED", "DEGRADED"]
    },
    "stt_confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "action_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 80
      },
      "maxItems": 100,
      "uniqueItems": true
    },
    "dry_run": {
      "type": "boolean",
      "default": true
    },
    "allow_high_risk": {
      "type": "boolean",
      "default": false
    },
    "user_confirmed": {
      "type": "boolean",
      "default": false
    },
    "confirmed_at_utc": {
      "type": "string",
      "format": "date-time"
    }
  }
}
