{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://watchkeeper.local/contracts/v1/vector_query_request.schema.json",
  "title": "VectorQueryRequest",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "query_text": {
      "type": "string",
      "minLength": 1,
      "maxLength": 4000
    },
    "query_vector": {
      "type": "array",
      "minItems": 1,
      "maxItems": 4096,
      "items": {
        "type": "number"
      }
    },
    "domain": {
      "type": "string",
      "minLength": 1,
      "maxLength": 80
    },
    "source_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    },
    "top_k": {
      "type": "integer",
      "minimum": 1,
      "maximum": 50,
      "default": 5
    },
    "min_score": {
      "type": "number",
      "minimum": -1,
      "maximum": 1,
      "default": -1
    },
    "include_text": {
      "type": "boolean",
      "default": true
    },
    "include_embedding": {
      "type": "boolean",
      "default": false
    }
  },
  "anyOf": [
    { "required": ["query_text"] },
    { "required": ["query_vector"] }
  ]
}
