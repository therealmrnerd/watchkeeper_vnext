{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://watchkeeper.local/contracts/v1/assist_request.schema.json",
  "title": "AssistRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["user_text"],
  "properties": {
    "incident_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    },
    "user_text": {
      "type": "string",
      "minLength": 1,
      "maxLength": 6000
    },
    "mode": {
      "type": "string",
      "enum": ["game", "work", "standby", "tutor"],
      "default": "standby"
    },
    "domain": {
      "type": "string",
      "enum": [
        "gameplay",
        "lore",
        "astrophysics",
        "general_gaming",
        "coding",
        "networking",
        "system",
        "music",
        "speech",
        "general"
      ]
    },
    "urgency": {
      "type": "string",
      "enum": ["low", "normal", "high"],
      "default": "normal"
    },
    "watch_condition": {
      "type": "string",
      "enum": ["STANDBY", "GAME", "WORK", "TUTOR", "RESTRICTED", "DEGRADED"]
    },
    "stt_confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "session_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    },
    "auto_execute": {
      "type": "boolean",
      "default": true
    },
    "dry_run": {
      "type": "boolean",
      "default": true
    },
    "allow_high_risk": {
      "type": "boolean",
      "default": false
    },
    "user_confirmed": {
      "type": "boolean",
      "default": false
    },
    "confirmed_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "use_knowledge": {
      "type": "boolean",
      "default": true
    }
  }
}
