{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://watchkeeper.local/contracts/v1/state_ingest_request.schema.json",
  "title": "StateIngestRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["items"],
  "properties": {
    "items": {
      "type": "array",
      "minItems": 1,
      "maxItems": 500,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["state_key", "state_value", "source"],
        "properties": {
          "state_key": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "state_value": {},
          "source": {
            "type": "string",
            "minLength": 1,
            "maxLength": 80
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "observed_at_utc": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "emit_events": {
      "type": "boolean",
      "default": true
    },
    "profile": {
      "type": "string",
      "minLength": 1,
      "maxLength": 80
    },
    "session_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    },
    "correlation_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    }
  }
}
