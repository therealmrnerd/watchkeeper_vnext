{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://watchkeeper.local/contracts/v1/facts_upsert_request.schema.json",
  "title": "FactsUpsertRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["triples"],
  "properties": {
    "triples": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1000,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["subject", "predicate", "object"],
        "properties": {
          "triple_id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120
          },
          "subject": {
            "type": "string",
            "minLength": 1,
            "maxLength": 300
          },
          "predicate": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120
          },
          "object": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1000
          },
          "source": {
            "type": "string",
            "maxLength": 300
          },
          "as_of_date": {
            "type": "string",
            "maxLength": 40
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "metadata": {
            "type": "object"
          }
        }
      }
    }
  }
}
